@model CategoryViewModel
<div class="row">

    <div class="col-8 offset-2">
        <div class="card-header fw-bold fs-5">
            @(Model.Id == 0 ? "Kategori Ekleme Formu" : "Kategori Güncelleme Formu")
        </div>

        <div style="color:red">@ViewBag.CategoryEror</div>

            <div class="card-body">

                <form method="post" asp-area="Executive" asp-controller="Category" asp-action="Save">

                    @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <input asp-for="Id" type="hidden" />

                    <div class="mb-2">
                        <label asp-for="CategoryName"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span class="text-danger fw-bold mt-1" asp-validation-for="CategoryName"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="CategoryDescription"></label>
                        <input asp-for="CategoryDescription" class="form-control" />
                        <span class="text-danger fw-bold mt-1" asp-validation-for="CategoryDescription"></span>
                    </div>
                <button type="submit" class="btn btn-success">@(Model.Id == 0 ? "Kaydet" : "Güncelle")</button>


                </form>

            </div>

        </div>








    </div>
